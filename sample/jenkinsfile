pipeline {
  agent any
  stages {
      stage('Build') {
          steps {
              println "Build Started"
              println "Build End"
          }
      }
      stage('Test') {
          steps {
              println "Test Started"
              println "Test End"
        }
      }
      stage('Provision') {
          steps {
              println "Provision Started"
              script {
                    myStage = input message: 'What stage do you want to run now?', parameters: [choice(choices: 'Proceed Provision\nSkip Provision', description: '', name: 'Stage')]
              }
              echo myStage

              sh 'ls -al'
              sh 'pwd'
              sh '/home/cosmos/git/ansible-playbooks/provision.sh'

              println "Provision End"
          }
      }
      stage('Deploy') {
          steps {
              println "Deploy Started"
              sh 'ls -al'
              sh 'ansible --help'
              println "Build End"
          }
      }
  }
  post {
    always {
      echo 'bra bra'
    }
    failure {
      echo 'fail!'
    }
  }
}
// node 키워드로 파이프라인을 정의하면, script {} 없이 if-else와 같은 스크립트 작성 가능
node {
  stage('Example') {
      if (env.BRANCH_NAME == 'master') {
          echo 'I only execute on the master branch'
      } else {
          echo 'I execute elsewhere'
      }
  }
}
